#Vetores

#1°: Devemos alocar espaço em nosso array
#2°: é importante saber o tipo e o tamanho do dado que vamos utilizar

.data
array:
	.align 2  #alinhar a palavra de dados na posição correta
	# align vale 2 porque é uma array de inteiros
	# caso seja um vetor de outro tipo, cons
	.space 16  #array de 4 inteiros

.text 
	move $t0, $zero #indice do array
	move $t1, $zero #valor a ser colocado no array
	li $t2, 16      #tamamnho do array
	
	loop:
	beq $t0, $t2, saiDoLoop
	sw $t1, array($t0)
	addi $t0, $t0, 4
	addi $t1, $t1, 1
	j loop
	
	saiDoLoop:
	move $t0, $zero
	imprime:
	beq $t0, $t2, saiDaImpressao
	li $v0, 1
	lw $a0, array($t0)
	syscall
	
	addi $t0, $t0, 4
	j imprime
	
	saiDaImpressao: